<mvc:View
    controllerName="shopverse.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <l:Splitter>
                <Page>
                    <layoutData>
                        <l:SplitterLayoutData
                            size="30%"
                            resizable="false"
                        />
                    </layoutData>
                    <Panel height="100%">
                        <SelectList items="{
						path: 'categoryModel>/'
					}">
                            <core:Item
                                key="{categoryModel>key}"
                                text="{categoryModel>value}"
                            />
                        </SelectList>
                    </Panel>
                </Page>
                <Page>
                    <layoutData>
                        <l:SplitterLayoutData size="auto" />
                    </layoutData>
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                        header="Total Categories"
                        frameType="OneByHalf"
                        subheader="90"
                        press="onPress"
                    />

                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                        header="Total Categories"
                        frameType="OneByHalf"
                        subheader="90"
                        press="onPress"
                    />
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                        header="Total Products"
                        frameType="OneByHalf"
                        subheader="9000"
                        press="onPress"
                    />

                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout"
                        header="Total Orders"
                        frameType="OneByHalf"
                        subheader="900"
                        press="onPress"
                    />

                    <f:Card
                        class="sapUiMediumMargin"
                        width="auto"
                    >
                        <f:header>
                            <card:Header
                                title="Explore Categories"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Categories',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CategoryName}"
                                            />
                                            <Text text="{NorthwindModel>Description}" />
                                        </VBox>
                                  
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>

                    <f:Card
                        class="sapUiMediumMargin"
                        width="auto"
                    >
                        <f:header>
                            <card:Header
                                title="Explore Products"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Products',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>ProductName}"
                                            />
                                            <Text text="{NorthwindModel>UnitPrice}" />
                                        </VBox>
                                        <ObjectStatus
                                            class="sapUiTinyMargin sapUiSmallMarginEnd"
                                            text="{NorthwindModel>UnitsInStock}"
                                            state = "{=${NorthwindModel>UnitsInStock} > 10 ? 'Success':'Error'}"
                                        />
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>



                    <f:Card
                        class="sapUiMediumMargin"
                        width="auto"
                    >
                        <f:header>
                            <card:Header
                                title="List of Customers"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Customers',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CompanyName}"
                                            />
                                            <Text text="{NorthwindModel>ContactName}" />
                                        </VBox>
                                       
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>


                    <f:Card
                        class="sapUiMediumMargin"
                        width="auto"
                    >
                        <f:header>
                            <card:Header
                                title="List of Orders"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Orders',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>OrderID}"
                                            />
                                            <Text text="{NorthwindModel>OrderDate}" />
                                        </VBox>
                                         <Text text="{NorthwindModel>ShipCountry}" />
                                        </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>



                    <f:Card
                        class="sapUiMediumMargin"
                        width="auto"
                    >
                        <f:header>
                            <card:Header
                                title="List of Suppliers"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Suppliers',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CompanyName}"
                                            />
                                            <Text text="{NorthwindModel>ContactName}" />
                                        </VBox>
                                        <Text text="{NorthwindModel>Country}" />

                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>
                </Page>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
