<mvc:View
    controllerName="shopverse.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <Page
        id="Dashboard"
        title="{i18n>subtitle}"
    >
    <f:Card
                        class="sapUiMediumMargin"
                        width="30%"
                    >
                        <f:header>
                            <card:Header
                                title="Explore Categories"
                                iconSrc="sap-icon://grid" 
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Categories',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CategoryName}"
                                            />
                                            <Text text="{NorthwindModel>Description}" />
                                        </VBox>
                                  
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>

                    <f:Card
                        class="sapUiMediumMargin"
                        width="30%"
                    >
                        <f:header>
                            <card:Header
                                title="Explore Products"
                                iconSrc="sap-icon://product" 
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Products',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>ProductName}"
                                            />
                                            <Text text="{NorthwindModel>UnitPrice}" />
                                        </VBox>
                                        <ObjectStatus
                                            class="sapUiTinyMargin sapUiSmallMarginEnd"
                                            text="{NorthwindModel>UnitsInStock}"
                                            state = "{=${NorthwindModel>UnitsInStock} > 10 ? 'Success':'Error'}"
                                        />
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>



                    <f:Card
                        class="sapUiMediumMargin"
                        width="30%"
                    >
                        <f:header>
                            <card:Header
                                title="List of Customers"
                                iconSrc="sap-icon://customer" 
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Customers',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CompanyName}"
                                            />
                                            <Text text="{NorthwindModel>ContactName}" />
                                        </VBox>
                                       
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>


                    <f:Card
                        class="sapUiMediumMargin"
                        width="30%"
                    >
                        <f:header>
                            <card:Header
                                title="List of Orders"
                                iconSrc="sap-icon://cart"
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Orders',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>OrderID}"
                                            />
                                            <Text text="{NorthwindModel>OrderDate}" />
                                        </VBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>



                    <f:Card
                        class="sapUiMediumMargin"
                        width="30%"
                    >
                        <f:header>
                            <card:Header
                                title="List of Suppliers"
                                iconSrc="sap-icon://supplier" 
                            />
                        </f:header>
                        <f:content>
                            <List
                                class="sapUiSmallMarginBottom"
                                showSeparators="None"
                                items="{
					path: 'NorthwindModel>/Suppliers',
                    length: 3
				}"
                            >
                                <CustomListItem class="paddingClass">
                                    <HBox
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <VBox
                                            class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"
                                        >
                                            <Title
                                                level="H3"
                                                text="{NorthwindModel>CompanyName}"
                                            />
                                            <Text text="{NorthwindModel>ContactName}" />
                                        </VBox>
                                        <Text text="{NorthwindModel>Country}" />

                                    </HBox>
                                </CustomListItem>
                            </List>
                        </f:content>
                    </f:Card>
    </Page>
</mvc:View>
