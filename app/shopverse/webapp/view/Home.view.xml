<mvc:View
    controllerName="shopverse.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <Page
        id="DashboardPage"
        title="{i18n>title}"
    >
        <content>
            <l:Splitter>
                <Page
                title="Explore">
                    <layoutData>
                        <l:SplitterLayoutData
                            size="20%"
                            resizable="false"
                        />
                    </layoutData>
                    <Panel height="100%">
                        <SelectList
                        itemPress="displayContent"
                         items="{
						path: 'categoryModel>/'
					}">
                
                            <core:Item
                                key="{categoryModel>key}"
                                text="{categoryModel>value}"
                            />
                        </SelectList>
                    </Panel>
                </Page>


                <Page title = "Hello Trendsetter .....">
                    <layoutData>
                        <l:SplitterLayoutData size="auto" />
                    </layoutData>

                    <NavContainer id="showContent"></NavContainer>
                    
                </Page>
            </l:Splitter>
        </content>
    </Page>
</mvc:View>
