<mvc:View
    controllerName="shopverse.controller.Category"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <Page
        id="Category"
        title="{i18n>title}"
    >
        <content>
            <f:GridContainer
                id="CategoryList"
                items="{
            path:'NorthwindModel>/Categories'
          
               }"
            >
                <f:layout>
                    <f:GridContainerSettings
                        id="CategorygridContainer"
                        class="sapUiSmallMargin"
                        rowSize="10rem"
                        columnSize="15rem"
                    />
                </f:layout>
                <f:items>
                    <f:Card
                        width="100%"
                        height="auto"
                        class="sapUiMediumMargin"
                    >
                        <f:header>
                            <card:Header title="{NorthwindModel>CategoryName}" />
                        </f:header>
                        <f:content>
                            <VBox
                               
                                class="sapUiSmallMargin"
                                justifyContent="SpaceBetween"
                            >
                             <Image
                                    src="{
        path: 'NorthwindModel>Picture',
        formatter: '.formatter.categoryImage'
    }"
                                />

                                <Text
                                    text="{NorthwindModel>Description}"
                                />
                            </VBox>
                        </f:content>
                    </f:Card>
                </f:items>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>
