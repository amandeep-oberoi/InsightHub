<mvc:View
    controllerName="shopverse.controller.Products"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <Page
        id="ProductsPage"
        title="{i18n>title}"
    >
        <content>
            <f:GridContainer
                id="ProductsList"
                items="{
            path:'NorthwindModel>/Products',
            parameters:{expand:'Category'} 
          
               }"
            >
                <f:layout>
                    <f:GridContainerSettings
                        id="gridContainer"
                        class="sapUiSmallMargin"
                        rowSize="10rem"
                        columnSize="15rem"
                    />
                </f:layout>
                <f:items>
                    <f:Card
                        width="100%"
                        height="auto"
                        class="sapUiMediumMargin"
                    >
                        <f:header>
                            <card:Header title="{NorthwindModel>ProductName}" />
                        </f:header>
                        <f:content>
                            <VBox
                               
                                class="sapUiSmallMargin"
                                justifyContent="SpaceBetween"
                            >
                                <Link
                                    text="{NorthwindModel>Category/CategoryName}"
                                    press="onCategoryPress"
                                />

                                <Image
                                    src="{
        path: 'NorthwindModel>Category/Picture',
        formatter: '.formatter.categoryImage'
    }"
                                />

                                <Text
                                    text="1 unit has: {NorthwindModel>QuantityPerUnit}"
                                />

                                <ObjectStatus
                                    text="UnitsInStock: {NorthwindModel>UnitsInStock}"
                                    state="{=${NorthwindModel>UnitsInStock} > 10 ?'Success': 'Error'}"
                                />

                                <ObjectStatus
                                    text="UnitPrice:  &#8377;{NorthwindModel>UnitPrice}"
                                    state="{
        path: 'NorthwindModel>UnitPrice',
        formatter: '.formatter.priceState'
    }"
                                />
                                <Text
                                    text="UnitsOnOrder: {NorthwindModel>UnitsOnOrder}"
                                />
                            </VBox>
                        </f:content>
                    </f:Card>
                </f:items>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>
