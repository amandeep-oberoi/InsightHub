<mvc:View
    controllerName="shopverse.controller.Orders"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:c ="sap.suite.ui.commons"
>
    <Page
        id="Orders"
        title="{i18n>title}"
    >
          	<c:Timeline
			id="OrdersTimeline"
			enableDoubleSided="true"
			groupBy="HireDate"
			growingThreshold="0"
			filterTitle="userName"
			sortOldestFirst="true"
			content="{NorthwindModel>/Orders}">
		<c:content>
			<c:TimelineItem
					id="OrdersidTemplateItem"
                    title = "{Northwind>OrderID}"
                    userName="{NorthwindModel>CustomerID}"
					dateTime="{NorthwindModel>OrderDate}"
					text="{NorthwindModel>ShipCountry}"
                    filterValue="{CustomerID}"
					>
			</c:TimelineItem>
		</c:content>
	</c:Timeline>
        
    </Page>
</mvc:View>
